<h1 class="users_heading"> Create new post</h1>

<section class="container">
  <%= form_with model:[@current, @current.posts.build], method: :post, local: true do |f| %>
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, :placeholder => "Title goes here...", required: true, class: "form-text" %>
    <%= f.label :text, "Write a new post", class: "form-label" %>
    <%= f.text_area :text, size: "50x15", :placeholder => "Add your post here...", required: true, class: "form-control" %>
    <%= f.submit "Add Post", data: {disable_with: "Adding..."}, class: "btn" %>
  <% end %>
</section>